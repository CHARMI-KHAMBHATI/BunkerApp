<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    useCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="88"
        android:background="#eee"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="11dp"
            android:orientation="horizontal"
            android:background="@color/primaryColor">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                <View
                    android:elevation="4dp"
                    android:id="@+id/asscircle"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ass_circle" />


            </RelativeLayout>

            <TextView
                android:id="@+id/subjecttext"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:layout_height="wrap_content"
                android:text="fghfgh"
                android:textColor="@color/primaryColorLight"
                android:textSize="21sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="11dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timingtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00 - 1:00"
                android:layout_weight="1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/teachertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gfhaaaaaaaaaaaaaaaaafgh"
                android:layout_weight="1"
                android:textSize="16sp" />


        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>