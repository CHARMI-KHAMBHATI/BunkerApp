<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    useCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="88"
        android:background="#eee"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="11dp"
            android:orientation="horizontal"
            android:background="@color/primaryColor">

            <TextView
                android:elevation="4dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/asscircle"
                android:background="@drawable/logo_circle"
                android:backgroundTint="@color/accentColor"
                android:text="A"
                android:textColor="@color/primaryColorLight"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="26sp"/>

            <TextView
                android:id="@+id/subjecttext"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:text="fghfgh"
                android:textColor="@color/primaryColorLight"
                android:textSize="21sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="11dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timingtext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="12:00 - 1:00"
                android:singleLine="true"
                android:layout_weight="3"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/teachertext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="gfhaaaaaaaaddddddddddddddddddddddaaaaaaaaafgh"
                android:layout_weight="5"
                android:textSize="16sp" />


        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>