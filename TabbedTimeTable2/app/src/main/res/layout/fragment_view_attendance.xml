<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kaano8.bunkersapp.ViewAttendance"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
    </android.support.v7.widget.RecyclerView>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        fab:fab_addButtonColorNormal="#FFC107"
        fab:fab_addButtonColorPressed="#80FFC107"
        fab:fab_labelStyle="@style/menu_labels_style"
        fab:fab_addButtonPlusIconColor="#444"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="#ff4433"
            fab:fab_title="Fill Today's Attendance"
            fab:fab_size="mini"
            fab:fab_icon="@drawable/settings"
            fab:fab_colorPressed="#99ff4433"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="#ff4433"
            fab:fab_title="Edit Attendance"
            fab:fab_size="mini"
            fab:fab_icon="@drawable/settings"
            fab:fab_colorPressed="#99ff4433"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</RelativeLayout>

